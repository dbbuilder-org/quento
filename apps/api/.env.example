# Quento API Configuration
# Copy this file to .env and update values

# Application
APP_NAME=Quento API
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8081","exp://localhost:8081"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://quento:quento@localhost:5432/quento

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Configuration (LiteLLM)
# LiteLLM supports multiple providers - configure the ones you use
# Using gpt-4o-mini for cost efficiency (~$0.15/1M input tokens)
LITELLM_API_KEY=
LLM_MODEL=gpt-4o-mini
CHAT_MODEL=gpt-4o-mini
ANALYSIS_MODEL=gpt-4o-mini
FAST_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# OpenAI (if using OpenAI models)
OPENAI_API_KEY=

# Anthropic (if using Claude models)
ANTHROPIC_API_KEY=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
CHAT_RATE_LIMIT_PER_MINUTE=30

# Google APIs
# PageSpeed Insights API Key (free tier: 25,000 requests/day)
# Get yours at: https://developers.google.com/speed/docs/insights/v5/get-started
GOOGLE_PAGESPEED_API_KEY=
