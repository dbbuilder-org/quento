{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "color": {
    "primary": {
      "carbon": {
        "$value": "#1A1A1A",
        "$type": "color",
        "$description": "Primary text, headings, high-contrast elements"
      },
      "forest": {
        "$value": "#2D5A3D",
        "$type": "color",
        "$description": "Primary brand color, CTAs, active states"
      },
      "sage": {
        "$value": "#4A7C5C",
        "$type": "color",
        "$description": "Secondary actions, links, accents"
      },
      "pure": {
        "$value": "#FFFFFF",
        "$type": "color",
        "$description": "Backgrounds, cards, light surfaces"
      }
    },
    "secondary": {
      "bark": {
        "$value": "#8B7355",
        "$type": "color",
        "$description": "Tertiary text, icons, subtle elements"
      },
      "sand": {
        "$value": "#D4C4A8",
        "$type": "color",
        "$description": "Disabled states, borders, dividers"
      },
      "cream": {
        "$value": "#F5F3EF",
        "$type": "color",
        "$description": "Page backgrounds, input fields"
      },
      "parchment": {
        "$value": "#E8E4DD",
        "$type": "color",
        "$description": "Subtle backgrounds, progress bars"
      }
    },
    "semantic": {
      "success": {
        "$value": "#2D7D46",
        "$type": "color",
        "$description": "Success states, positive indicators"
      },
      "warning": {
        "$value": "#D4A84B",
        "$type": "color",
        "$description": "Warning states, caution indicators"
      },
      "error": {
        "$value": "#C75450",
        "$type": "color",
        "$description": "Error states, destructive actions"
      },
      "info": {
        "$value": "#4A90A4",
        "$type": "color",
        "$description": "Informational states, neutral highlights"
      }
    },
    "transparency": {
      "carbonLight": {
        "$value": "rgba(26, 26, 26, 0.6)",
        "$type": "color",
        "$description": "Overlay text, secondary labels"
      },
      "forestLight": {
        "$value": "rgba(45, 90, 61, 0.1)",
        "$type": "color",
        "$description": "Subtle forest tint backgrounds"
      },
      "pureOverlay": {
        "$value": "rgba(255, 255, 255, 0.94)",
        "$type": "color",
        "$description": "Modal overlays, frosted glass effects"
      }
    }
  },
  "spacing": {
    "xs": {
      "$value": "4px",
      "$type": "dimension",
      "$description": "Tight element spacing, icon gaps"
    },
    "sm": {
      "$value": "8px",
      "$type": "dimension",
      "$description": "Related element groups, list items"
    },
    "md": {
      "$value": "12px",
      "$type": "dimension",
      "$description": "Standard padding, input internal spacing"
    },
    "lg": {
      "$value": "16px",
      "$type": "dimension",
      "$description": "Card internal padding, button padding"
    },
    "xl": {
      "$value": "20px",
      "$type": "dimension",
      "$description": "Section breaks, form field gaps"
    },
    "2xl": {
      "$value": "24px",
      "$type": "dimension",
      "$description": "Component separation, card gaps"
    },
    "3xl": {
      "$value": "32px",
      "$type": "dimension",
      "$description": "Major section gaps, screen padding"
    },
    "4xl": {
      "$value": "40px",
      "$type": "dimension",
      "$description": "Page margins, large separations"
    },
    "5xl": {
      "$value": "48px",
      "$type": "dimension",
      "$description": "Hero section spacing"
    },
    "6xl": {
      "$value": "64px",
      "$type": "dimension",
      "$description": "Maximum spacing, splash screens"
    }
  },
  "typography": {
    "displayLarge": {
      "$value": {
        "fontFamily": "Playfair Display",
        "fontSize": "48px",
        "lineHeight": "56px",
        "fontWeight": "300",
        "letterSpacing": "-0.5px"
      },
      "$type": "typography",
      "$description": "Hero headlines, splash screens"
    },
    "displayMedium": {
      "$value": {
        "fontFamily": "Playfair Display",
        "fontSize": "36px",
        "lineHeight": "44px",
        "fontWeight": "400",
        "letterSpacing": "-0.5px"
      },
      "$type": "typography",
      "$description": "Page titles, major headings"
    },
    "headlineLarge": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "32px",
        "lineHeight": "40px",
        "fontWeight": "600",
        "letterSpacing": "-0.5px"
      },
      "$type": "typography",
      "$description": "Section headings"
    },
    "headlineMedium": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "28px",
        "lineHeight": "36px",
        "fontWeight": "600",
        "letterSpacing": "-0.25px"
      },
      "$type": "typography",
      "$description": "Card titles, subsection headings"
    },
    "titleLarge": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "22px",
        "lineHeight": "28px",
        "fontWeight": "600",
        "letterSpacing": "0"
      },
      "$type": "typography",
      "$description": "Component titles, list headers"
    },
    "titleMedium": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "18px",
        "lineHeight": "24px",
        "fontWeight": "500",
        "letterSpacing": "0"
      },
      "$type": "typography",
      "$description": "Button labels, tab labels"
    },
    "bodyLarge": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "17px",
        "lineHeight": "24px",
        "fontWeight": "400",
        "letterSpacing": "0"
      },
      "$type": "typography",
      "$description": "Primary body text, descriptions"
    },
    "body": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "15px",
        "lineHeight": "22px",
        "fontWeight": "400",
        "letterSpacing": "0"
      },
      "$type": "typography",
      "$description": "Standard body text"
    },
    "bodySmall": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "13px",
        "lineHeight": "18px",
        "fontWeight": "400",
        "letterSpacing": "0.1px"
      },
      "$type": "typography",
      "$description": "Secondary text, metadata"
    },
    "labelLarge": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "14px",
        "lineHeight": "20px",
        "fontWeight": "500",
        "letterSpacing": "0.1px"
      },
      "$type": "typography",
      "$description": "Form labels, navigation items"
    },
    "labelMedium": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "12px",
        "lineHeight": "16px",
        "fontWeight": "500",
        "letterSpacing": "0.5px"
      },
      "$type": "typography",
      "$description": "Badges, chips, tags"
    },
    "caption": {
      "$value": {
        "fontFamily": "Inter",
        "fontSize": "11px",
        "lineHeight": "14px",
        "fontWeight": "400",
        "letterSpacing": "0.5px"
      },
      "$type": "typography",
      "$description": "Captions, timestamps, helper text"
    }
  },
  "borderRadius": {
    "xs": {
      "$value": "4px",
      "$type": "dimension",
      "$description": "Small elements, badges, chips"
    },
    "sm": {
      "$value": "8px",
      "$type": "dimension",
      "$description": "Buttons, inputs, small cards"
    },
    "md": {
      "$value": "12px",
      "$type": "dimension",
      "$description": "Cards, panels, dialogs"
    },
    "lg": {
      "$value": "16px",
      "$type": "dimension",
      "$description": "Large cards, modals"
    },
    "xl": {
      "$value": "20px",
      "$type": "dimension",
      "$description": "Chat bubbles, floating elements"
    },
    "full": {
      "$value": "9999px",
      "$type": "dimension",
      "$description": "Pills, circular buttons, avatars"
    }
  },
  "shadow": {
    "sm": {
      "$value": {
        "color": "rgba(0, 0, 0, 0.04)",
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px"
      },
      "$type": "shadow",
      "$description": "Subtle elevation, list items"
    },
    "md": {
      "$value": {
        "color": "rgba(0, 0, 0, 0.08)",
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "8px",
        "spread": "0px"
      },
      "$type": "shadow",
      "$description": "Cards, buttons, inputs"
    },
    "lg": {
      "$value": {
        "color": "rgba(0, 0, 0, 0.12)",
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "16px",
        "spread": "0px"
      },
      "$type": "shadow",
      "$description": "Modals, dropdowns, popovers"
    }
  },
  "animation": {
    "fast": {
      "$value": "150ms",
      "$type": "duration",
      "$description": "Micro-interactions, hover states"
    },
    "normal": {
      "$value": "200ms",
      "$type": "duration",
      "$description": "Standard transitions, state changes"
    },
    "slow": {
      "$value": "300ms",
      "$type": "duration",
      "$description": "Page transitions, reveals"
    },
    "ring": {
      "$value": "800ms",
      "$type": "duration",
      "$description": "Ring progress animations"
    }
  }
}
